	//remove 'readonly' attr of file
	removeReadonlyAttr = function (file){
    	import fsys.ini;
    	import fsys
    	if(file){
    		var ro = fsys.isReadonly(file)
			if(ro){
				fsys.attrib(file,0x1/*_FILE_ATTRIBUTE_READONLY*/)
			}
    	}
}
}
